def main() :: int {
    let i: int = 0;
    let j: int = 10;
    let k: int = 5;
    let m: int = 20;

    // Test compound assignment operators
    print_int(i);  // Should print 0
    i += 5;
    print_int(i);  // Should print 5
    
    i -= 2;
    print_int(i);  // Should print 3
    
    i *= 3;
    print_int(i);  // Should print 9
    
    i /= 3;
    print_int(i);  // Should print 3

    // Test increment/decrement operators
    let x: int = 10;
    print_int(++x); // Should print 11 (pre-increment)
    print_int(x);   // Should print 11
    
    print_int(x++); // Should print 11 (post-increment)
    print_int(x);   // Should print 12
    
    print_int(--x); // Should print 11 (pre-decrement)
    print_int(x);   // Should print 11
    
    print_int(x--); // Should print 11 (post-decrement)
    print_int(x);   // Should print 10

    // Test in for loops
    for (j > 0 :: j--) {
        print_int(j);
        if (j <= 7) {
            return 0;
        }
    }

    return 0;
}
